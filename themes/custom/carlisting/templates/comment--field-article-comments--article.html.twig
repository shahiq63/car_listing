<article{{ attributes.addClass('js-comment') }}>
<mark class="hidden" data-comment-timestamp="{{ new_indicator_timestamp }}"></mark>
<div{{ content_attributes }}>
  {% if title %}
    <h3>{{ title }}</h3>
  {% endif %}
  {{ content }}
</div>
  <footer>
    {{ user_picture }}
    <p>{{ submitted }}</p>
    {% if parent %}
      <p class="visually-hidden">{{ parent }}</p>
    {% endif %}
  </footer>
  <hr>

</article>
